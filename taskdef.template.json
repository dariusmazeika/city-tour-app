{
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${CI_PROJECT_NAME}-${CI_ENVIRONMENT_NAME}",
          "awslogs-region": "${AWS_DEFAULT_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 8000,
          "protocol": "tcp",
          "containerPort": 8000
        }
      ],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "conf.settings_aws"
        },
        {
          "name": "RUN_MODE",
          "value": "GUNICORN"
        },
        {
          "name": "SENTRY_DSN",
          "value": "${SENTRY_DSN}"
        },
        {
          "name": "DEFAULT_FROM_EMAIL",
          "value": "${DEFAULT_FROM_EMAIL}"
        },
        {
          "name": "REDIS_URL",
          "value": "${REDIS_URL}"
        },
        {
          "name": "STORAGE_BUCKET_NAME",
          "value": "${STORAGE_BUCKET_NAME}"
        },
        {
          "name": "STATIC_BUCKET_NAME",
          "value": "${STATIC_BUCKET_NAME}"
        },
        {
          "name": "APP_HOST",
          "value": "${CI_ENVIRONMENT_URL}"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_DEFAULT_REGION}"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        },
        {
          "name": "BUILD_VERSION",
          "value": "${CI_PIPELINE_ID}"
        }
      ],
      "secrets": [
        {
          "name": "DB_SECRET",
          "valueFrom": "/${CI_ENVIRONMENT_NAME}/DB_SECRET"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "/${CI_ENVIRONMENT_NAME}/SECRET_KEY"
        }
      ],
      "essential": true,
      "image": "${AWS_ECR}:${CI_COMMIT_SHORT_SHA}",
      "name": "${CI_PROJECT_NAME}"
    },
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${CI_PROJECT_NAME}-${CI_ENVIRONMENT_NAME}",
          "awslogs-region": "${AWS_DEFAULT_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "conf.settings_aws"
        },
        {
          "name": "RUN_MODE",
          "value": "CELERY_WORKER_AND_BEAT"
        },
        {
          "name": "SENTRY_DSN",
          "value": "${SENTRY_DSN}"
        },
        {
          "name": "DEFAULT_FROM_EMAIL",
          "value": "${DEFAULT_FROM_EMAIL}"
        },
        {
          "name": "REDIS_URL",
          "value": "${REDIS_URL}"
        },
        {
          "name": "STORAGE_BUCKET_NAME",
          "value": "${STORAGE_BUCKET_NAME}"
        },
        {
          "name": "STATIC_BUCKET_NAME",
          "value": "${STATIC_BUCKET_NAME}"
        },
        {
          "name": "APP_HOST",
          "value": "${CI_ENVIRONMENT_URL}"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_DEFAULT_REGION}"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        },
        {
          "name": "BUILD_VERSION",
          "value": "${CI_PIPELINE_ID}"
        }
      ],
      "secrets": [
        {
          "name": "DB_SECRET",
          "valueFrom": "/${CI_ENVIRONMENT_NAME}/DB_SECRET"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "/${CI_ENVIRONMENT_NAME}/SECRET_KEY"
        }
      ],
      "essential": true,
      "image": "${AWS_ECR}:${CI_COMMIT_SHORT_SHA}",
      "name": "${CI_PROJECT_NAME}-CELERY"
    }
  ],
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "family": "${CI_PROJECT_NAME}-${CI_ENVIRONMENT_NAME}",
  "networkMode": "awsvpc",
  "tags": [
    {
      "key": "env",
      "value": "${CI_ENVIRONMENT_NAME}"
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048"
}
