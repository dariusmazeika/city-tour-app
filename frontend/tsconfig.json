{
    "compilerOptions": {
        "outDir": "./dist/",        // path to output directory
        "sourceMap": true,          // allow sourcemap support
        "strictNullChecks": true,   // enable strict null checks as a best practice
        "module": "es6",            // specify module code generation
        "jsx": "react",             // use typescript to transpile jsx to js
        "target": "esnext",            // specify ECMAScript target version
        "allowJs": true,             // allow a partial TypeScript and JavaScript codebase,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noEmit": true,
        "strict": true,

        "lib": [
            "dom",
            "es2015",
            "es2017.object"
          ],

        //Impo
        "allowSyntheticDefaultImports": true, // no errors on commonjs default import
        "checkJs": false, // typecheck js files
        "declaration": false, // don't emit declarations
        "importHelpers": true, // importing helper functions from tslib
        "noEmitHelpers": true, // disable emitting inline helper functions

        // "module": "commonjs", // "es2015" for tree-shaking
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "pretty": true,
        "removeComments": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
          "@Components/*": ["src/js/components/*"],
          "@Config/*": ["src/js/config/*"],
          "@Images/*": ["src/js/images/*"],
          "@Routes/*": ["src/js/routes/*"],
          "@Store/*": ["src/js/store/*"],
          "@Utils/*": ["src/js/utils/*"],
          "@Navigation/*": ["src/js/navigation/*"],
          "@Styles/*": ["src/styles/*"],
          "@Mocks/*": ["__mocks__/*"]
      }
    },
    "include": ["./src/"],
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
